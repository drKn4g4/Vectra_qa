{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": [
    "tests/**/*.ts",
    "pages/**/*.ts",
    "config/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}